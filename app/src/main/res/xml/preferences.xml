<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto">
    <ListPreference
            android:key="@string/preference_sort_by"
            android:summary="%s"
            android:title="Sort By:"
            android:defaultValue="popularity.desc"
            android:entries="@array/sort_by_entries"
            android:entryValues="@array/sort_by_values" android:icon="@android:drawable/ic_menu_sort_by_size"
            android:dialogIcon="@android:drawable/ic_menu_sort_by_size" android:layout_width="match_parent"
            android:layout_height="wrap_content" android:isScrollContainer="false"/>

    <PreferenceCategory>

        <ListPreference
                android:key="@string/preference_rating"
                android:summary="%s"
                android:title="Rating:"
                android:defaultValue=""
                android:entries="@array/rating_entries"
                android:entryValues="@array/rating_values" android:icon="@android:drawable/btn_star"
                android:dialogIcon="@android:drawable/btn_star"
        />

        <EditTextPreference
                android:key="@string/preference_vote_count"
                android:defaultValue="1000"
                android:summary="1000"
                android:title="Vote Count:"
                app:useSimpleSummaryProvider="true" android:icon="@android:drawable/ic_menu_view"
                android:dialogIcon="@android:drawable/ic_menu_view">
        </EditTextPreference>

        <EditTextPreference
                android:key="@string/preference_year"
                android:summary="@string/all_time"
                android:title="Year:" android:icon="@android:drawable/ic_menu_today"
                android:dialogIcon="@android:drawable/ic_menu_today">
        </EditTextPreference>
    </PreferenceCategory>
</PreferenceScreen>