<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <import type="android.view.View"/>
        <variable name="movie" type="com.ems.movieknower.data.Movie"/>
        <variable name="onClickMovie" type="com.ems.movieknower.data.OnClickMovieHandler"/>
    </data>

    <androidx.cardview.widget.CardView
            android:layout_width="95dp"
            android:layout_height="140dp"
            android:layout_margin="3dp"
            android:id="@+id/cardView"
            android:onClick="@{() -> onClickMovie.onClickMovie(movie)}">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <TextView android:layout_width="28dp"
                      android:layout_height="28dp"
                      android:id="@+id/movie_rating"
                      android:background="@drawable/rating_circle"
                      android:textColor="#FFFFFF"
                      android:gravity="center"
                      android:text="@{movie.rating}" app:layout_constraintEnd_toEndOf="@+id/movies_poster"
                      android:elevation="1dp" android:layout_marginEnd="4dp" android:layout_marginBottom="4dp"
                      app:layout_constraintBottom_toBottomOf="@+id/movies_poster"/>

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_launcher_background"
                    android:id="@+id/movies_poster"
                    android:contentDescription="@string/movie_poster"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</layout>